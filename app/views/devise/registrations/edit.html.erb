<div class="user-edit-page">

  <%= render "partial/navbar" %>

  <%#= form_with scope: resource, as: resource_name, url: registration_path(resource_name), class: "px-3", method: :patch do |f| %>
  <%= form_with scope: resource, as: resource_name, url: registration_path(resource_name), class: "px-3", method: :patch do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="profile">
      <div class="profile-default-img"></div>
    </div>

    <div class="mb-2">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "メールアドレス" %>
    </div>

    <div class="mb-2">
      <%= f.text_field :name, class: "form-control", placeholder: "名前" %>
    </div>

    <div class="mb-2">
      <%= f.text_area :self_introduction, class: "form-control", placeholder: "紹介", rows: "4" %>
    </div>

    <div class="user-edit__submit-btn d-grid">
      <%= f.submit "保存", class: "btn text-white" %>
    </div>
  <% end %>

</div>
